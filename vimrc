filetype on
syntax on

set nocompatible
set number
set tabstop=2
set smarttab
set expandtab
set nobackup
set incsearch
set ignorecase
set showmode
set showmatch
set hlsearch
set history=1000
set wildmenu
set wildmode=list:longest
set wildignore=*.docx,*.jpg,*.png,*.gif,*.pdf,*.pyc,*.exe,*.flv,*.img,*.xlsx
